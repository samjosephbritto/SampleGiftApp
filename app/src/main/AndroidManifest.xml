<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.britto.mygiftapplication">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/gifting"
        android:label="@string/app_name"
        android:roundIcon="@drawable/gifting"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".SplashPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".LoginPage"/>
        <activity android:name=".Register"/>
        <activity android:name=".AboutUSPage"/>
        <activity android:name=".Shop"/>
        <activity android:name=".WrappingArea"/>
        <activity android:name=".Delivery"/>
        <activity android:name=".MyCloud"/>
        <activity android:name=".Wishlist"/>
        <activity android:name=".Help"/>
        <activity android:name=".YourOrder"/>
    </application>
</manifest>